          .exmain-detail-brand
            = f.fields_for :brand do |b|
              %label ブランド
              %span.exmain-label-gray 任意
              = b.text_field :name, placeholder: "例）シャネル", value: "" ,class: "exmain-detail-brand-input"
            
          .exmain-detail-status
            %label 商品の状態
            %span.exmain-label 必須
