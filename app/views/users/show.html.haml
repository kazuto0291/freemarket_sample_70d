.body
  = render "shared/header"
  %nav.category-menu
    %ul
      %li.root
        = link_to 'FURIMA', root_path
      %li
        %i.fa.fa-angle-right
      %li.category-show
        = link_to 'マイページ', user_path(current_user.id)

  .content
    .user-mypage
      = render "shared/mypage-side"
      .user-mypage__content
        .user-mypage__content__icon
          .user-mypage__content__icon__image
            = image_tag("icon_camera", class: 'iconImage')
          %h2.user-mypage__content__icon__name
            = current_user.nickname
          %h2.user-mypage__content__icon__status
            %span 評価 0
            %span 出品数 0
        .user-mypage__content__product
          %h2.user-mypage__content__product__text
            購入した商品
          .user-mypage__content__product__items
            %span 取引中の商品がございません
  = render "shared/footer"
  = render "shared/sell_button"
